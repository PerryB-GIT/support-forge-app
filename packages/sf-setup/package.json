{
  "name": "@support-forge/setup",
  "version": "1.0.0",
  "description": "Support Forge AI Setup - Claude Code installer with MCP servers, skills, and integrations",
  "main": "src/index.js",
  "bin": {
    "sf-setup": "./src/index.js",
    "sf": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "gui": "node src/index.js --gui",
    "build": "pkg . --targets node18-win-x64 --output dist/sf-setup.exe",
    "build:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output dist/sf-setup",
    "doctor": "node src/cli.js doctor",
    "test": "node src/test.js"
  },
  "pkg": {
    "assets": [
      "src/ui/**/*",
      "src/modules/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "conf": "^10.2.0",
    "express": "^4.18.2",
    "inquirer": "^8.2.6",
    "open": "^8.4.2",
    "ora": "^5.4.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "pkg": "^5.8.1"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "ai",
    "setup",
    "installer",
    "support-forge"
  ],
  "author": "Support Forge <hello@support-forge.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/support-forge/sf-setup"
  },
  "homepage": "https://support-forge.com/setup",
  "engines": {
    "node": ">=16.0.0"
  }
}
